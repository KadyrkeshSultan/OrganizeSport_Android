<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.organizesport.android.view.activities.RssFeedActivity">

    <include
        android:id="@+id/toolbar_view"
        layout="@layout/toolbar_view_custom_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_id_activity_rss_feed"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_marginEnd="@dimen/base_dimen_8"
        android:layout_marginLeft="@dimen/base_dimen_16"
        android:layout_marginRight="@dimen/base_dimen_8"
        android:layout_marginStart="@dimen/base_dimen_16"
        android:gravity="center"
        android:text="@string/tv_empty_text"
        android:textColor="@android:color/black"
        android:textSize="@dimen/base_text_dimen_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_joke_activity_rss_feed"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_view" />

    <TextView
        android:id="@+id/tv_joke_activity_rss_feed"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginEnd="@dimen/base_dimen_16"
        android:layout_marginLeft="@dimen/base_dimen_8"
        android:layout_marginRight="@dimen/base_dimen_16"
        android:layout_marginStart="@dimen/base_dimen_8"
        android:gravity="center"
        android:text="@string/tv_empty_text"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_id_activity_rss_feed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_view" />

</android.support.constraint.ConstraintLayout>
