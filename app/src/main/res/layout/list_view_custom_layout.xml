<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">
    <!-- 'descendantFocusability' avoids blocking 'ListView.onItemClickListener()' -->

    <TextView
        android:id="@+id/tv_sport_list_view_custom_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_8"
        android:layout_marginStart="@dimen/base_dimen_8"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/base_dimen_8"
        android:paddingTop="@dimen/base_dimen_8"
        android:text="@string/tv_dummy_text"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/img_btn_selected_sport_list_view_custom_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/base_dimen_8"
        android:layout_marginRight="@dimen/base_dimen_8"
        android:background="@drawable/img_btn_sport_selector"
        android:clickable="false"
        android:contentDescription="@string/tv_preferable_sport_icon_text"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sport_list_view_custom_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_sport_list_view_custom_layout" />
</android.support.constraint.ConstraintLayout>